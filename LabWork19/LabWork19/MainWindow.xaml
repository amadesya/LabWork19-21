<Window x:Class="LabWork19.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация" Height="400" Width="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин:" Margin="5"/>
            <TextBox Name="txtUsername" Width="200" Height="25" Margin="5"/>
            <TextBlock Text="Пароль:" Margin="5"/>
            <PasswordBox Name="txtPassword" Width="200" Height="25" Margin="5"/>
            <Button Name="btnLogin" Content="Войти" Width="100" Height="30" Margin="5"
                    Click="btnLogin_Click"/>
            <TextBlock Name="lblMessage" Text="" Foreground="Red" Margin="5" Visibility="Hidden"/>
        </StackPanel>
    </Grid>
</Window>
