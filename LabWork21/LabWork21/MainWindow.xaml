<Window x:Class="LabWork20.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SQL Query Executor" Height="630" Width="600" Background="#2E2E2E" Foreground="#FFFFFF">
    <Grid>

        <TextBox x:Name="txtQuery" HorizontalAlignment="Center" Margin="10,10,10,0" VerticalAlignment="Top" Height="30" Width="360" Background="#555555" Foreground="#FFFFFF" Text="Введите SQL-запрос" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
        <Button Content="Выполнить запрос" HorizontalAlignment="Center" VerticalAlignment="Top" Width="360" Height="30" Margin="10,50,10,0" Background="#555555" Foreground="#FFFFFF" Click="btnExecute_Click"/>
        <Label x:Name="lblResult" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,90,10,10" Height="30" Width="360" Foreground="#FFFFFF"/>

        <Label Content="Введите ID книги для удаления:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10,140,10,0" Foreground="#FFFFFF"/>
        <TextBox x:Name="txtBookId" HorizontalAlignment="Center" Margin="10,170,10,0" VerticalAlignment="Top" Height="30" Width="360" Background="#555555" Foreground="#FFFFFF" Text="Введите ID книги" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
        <Button Content="Удалить книгу" HorizontalAlignment="Center" VerticalAlignment="Top" Width="360" Height="30" Margin="10,210,10,0" Background="#555555" Foreground="#FFFFFF" Click="btnDelete_Click"/>


        <TextBox x:Name="txtTitle" HorizontalAlignment="Center" Margin="10,280,10,0" VerticalAlignment="Top" Height="30" Width="360" Background="#555555" Foreground="#FFFFFF" Text="Введите название книги" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
        <TextBox x:Name="txtAuthorId" HorizontalAlignment="Center" Margin="10,315,10,0" VerticalAlignment="Top" Height="30" Width="360" Background="#555555" Foreground="#FFFFFF" Text="Введите ID автора" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
        <TextBox x:Name="txtGenre" HorizontalAlignment="Center" Margin="10,350,10,0" VerticalAlignment="Top" Height="30" Width="360" Background="#555555" Foreground="#FFFFFF" Text="Введите жанр" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
        <TextBox x:Name="txtPrice" HorizontalAlignment="Center" Margin="10,385,10,0" VerticalAlignment="Top" Height="30" Width="360" Background="#555555" Foreground="#FFFFFF" Text="Введите цену" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
        <TextBox x:Name="txtWeight" HorizontalAlignment="Center" Margin="10,420,10,0" VerticalAlignment="Top" Height="30" Width="360" Background="#555555" Foreground="#FFFFFF" Text="Введите вес" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
        <TextBox x:Name="txtYear" HorizontalAlignment="Center" Margin="10,455,10,0" VerticalAlignment="Top" Height="30" Width="360" Background="#555555" Foreground="#FFFFFF" Text="Введите год выпуска" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
        <TextBox x:Name="txtPages" HorizontalAlignment="Center" Margin="10,490,10,0" VerticalAlignment="Top" Height="30" Width="360" Background="#555555" Foreground="#FFFFFF" Text="Введите количество страниц" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>
        <Button Content="Добавить книгу" HorizontalAlignment="Center" VerticalAlignment="Top" Width="360" Height="30" Margin="10,530,10,0" Background="#555555" Foreground="#FFFFFF" Click="btnAddBook_Click"/>
    </Grid>
</Window>
